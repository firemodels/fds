! Ref: Pontus von Schoenberg. Development of a Large-Eddy Simulation code for
!      atmospheric boundary layer. Swedish Defence Research Agency,
!      FOI-R--1533--SE, December, 2004.

&HEAD CHID='ekman_unstable',  TITLE='Simulation of ABL Swedish Report 2004, unstable Case' /

! &MESH IJK=40,40,40, XB=0,4000,0,2000,0,1500/

&MULT ID='m1', DX=1000,DY=500, I_UPPER=3,J_UPPER=3/ 16 mesh
&MESH IJK=10,10,40, XB=0,1000,0,500,0,1500, MULT_ID='m1'/

&TIME T_END=144000/

&DUMP DT_SLCF=100, DT_DEVC=10 /

&MISC TMPA=15, P_INF=85546, HUMIDITY=0./

&SPEC ID='LJ AIR', SPECIFIC_HEAT=1., BACKGROUND=T/

&PRES VELOCITY_TOLERANCE=0.01, MAX_PRESSURE_ITERATIONS=100/

&RADI RADIATION=F/

&WIND U0=15.0, LATITUDE=45, GEOSTROPHIC_WIND(1)=15, STRATIFICATION=F/

&SURF ID='GROUND', Z_0=0.1, COLOR='FOREST GREEN', NET_HEAT_FLUX=0.02, RAMP_Q='heat flux ramp'/

&RAMP ID='heat flux ramp', T=0     ,F=0/
&RAMP ID='heat flux ramp', T=111599,F=0/ 31 hrs
&RAMP ID='heat flux ramp', T=111600,F=1/ Schoenberg applies flux for last "6+3" hours
&RAMP ID='heat flux ramp', T=144000,F=1/

&VENT PBX=0,    SURF_ID = 'PERIODIC' /
&VENT PBX=4000, SURF_ID = 'PERIODIC' /
&VENT PBY=0,    SURF_ID = 'PERIODIC' /
&VENT PBY=2000, SURF_ID = 'PERIODIC' /
&VENT PBZ=0,    SURF_ID = 'GROUND'/
&VENT PBZ=1500, SURF_ID = 'MIRROR' /

&SLCF PBX=2000,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBY=1000,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBZ= 500,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBZ=1000,QUANTITY='VELOCITY',VECTOR=.TRUE./

&SLCF PBY=1000,QUANTITY='TEMPERATURE', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='POTENTIAL TEMPERATURE', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='DENSITY', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='DIVERGENCE', CELL_CENTERED=T/

&BNDF QUANTITY='WALL TEMPERATURE', CELL_CENTERED=T/
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T/
&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='FRICTION VELOCITY', CELL_CENTERED=T/

&DEVC XB=10,4000,10,2000, 0, 0, QUANTITY='FRICTION VELOCITY', IOR=3, ID='USTAR_AV', SPATIAL_STATISTIC='MEAN' /

&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='DENSITY',     ID='RHO_Z'/
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='TEMPERATURE', ID='T_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='PRESSURE',    ID='P_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='U-VELOCITY', ID='U_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='V-VELOCITY', ID='V_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='W-VELOCITY', ID='W_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='U-VELOCITY', ID='COV-uu', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='V-VELOCITY', QUANTITY2='V-VELOCITY', ID='COV-vv', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='W-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-ww', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='V-VELOCITY', ID='COV-uv', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='V-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-vw', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, STATISTICS_START=133200, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-uw', TEMPORAL_STATISTIC='COV', HIDE_COORDINATES=.TRUE./

&TAIL /

