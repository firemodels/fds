&HEAD CHID='control_test_2', TITLE='Control function testing part 2'/

&MESH XB=-1.05,1.05,-1,1,0,2, IJK=22,20,20 /
&TIME T_END=10,DT=0.1/
&MISC Y_CO2_INFTY=0.,HUMIDITY=0./

&SURF ID='AD',DEFAULT=.TRUE.,HEAT_TRANSFER_COEFFICIENT=0.,EMISSIVITY=0./

&OBST XB=-0.05,0.05,-1,1,0,2/

&INIT XB= 0.05, 1.05,-1,1,0,2,TEMPERATURE= 10./

&DEVC ID='LHS Temp',QUANTITY='TEMPERATURE',XYZ=-0.5,0,1/
&DEVC ID='RHS Temp',QUANTITY='TEMPERATURE',XYZ= 0.5,0,1/
&DEVC ID='Time',QUANTITY='TIME',XYZ=0,0,1/
&DEVC ID='CF Add',QUANTITY='CONTROL VALUE',CTRL_ID='Add',XYZ=0,0,1/
&DEVC ID='CF Multiply',QUANTITY='CONTROL VALUE',CTRL_ID='Multiply',XYZ=0,0,1/
&DEVC ID='CF Subtract',QUANTITY='CONTROL VALUE',CTRL_ID='Subtract',XYZ=0,0,1/
&DEVC ID='CF Divide',QUANTITY='CONTROL VALUE',CTRL_ID='Divide',XYZ=0,0,1/
&DEVC ID='CF Power',QUANTITY='CONTROL VALUE',CTRL_ID='Power',XYZ=0,0,1/
&DEVC ID='CF PID',QUANTITY='CONTROL VALUE',CTRL_ID='PID',XYZ=0,0,1/

&CTRL ID='Add',FUNCTION_TYPE='SUM',INPUT_ID='LHS Temp','RHS Temp'/
&CTRL ID='Subtract',FUNCTION_TYPE='SUBTRACT',INPUT_ID='RHS Temp','LHS Temp'/
&CTRL ID='Multiply',FUNCTION_TYPE='MULTIPLY',INPUT_ID='LHS Temp','CONSTANT',CONSTANT=0.5/
&CTRL ID='Divide',FUNCTION_TYPE='DIVIDE',INPUT_ID='LHS Temp','RHS Temp'/
&CTRL ID='Power',FUNCTION_TYPE='POWER',INPUT_ID='RHS Temp','CONSTANT',CONSTANT=0.5/
&CTRL ID='PID',FUNCTION_TYPE='PID',INPUT_ID='Time',TARGET_VALUE=5.,
          PROPORTIONAL_GAIN=-0.5,INTEGRAL_GAIN=0.001,DIFFERENTIAL_GAIN=1./

&TAIL /

&BNDF QUANTITY='CONVECTIVE HEAT FLUX'/
&BNDF QUANTITY='RADIATIVE HEAT FLUX'/
&BNDF QUANTITY='WALL TEMPERATURE'/
