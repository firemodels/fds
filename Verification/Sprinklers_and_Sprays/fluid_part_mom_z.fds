&HEAD CHID='fluid_part_mom_z', TITLE='simple test of fluid-particle momentum conservation, z direction' /

&MESH IJK=4,4,40,XB=-0.5,0.5,-0.5,0.5, 0,10 /

&TIME T_END=1./ 

&MISC NOISE=.FALSE.,
      DNS=.TRUE.,
      GVEC=0,0,0, 
      STRATIFICATION=.FALSE.
      W0=10/

&SPEC ID='AIR',VISCOSITY=1.,BACKGROUND=.TRUE./

&RADI RADIATION = .FALSE. /

&VENT MB='ZMIN',SURF_ID='PERIODIC' /
&VENT MB='ZMAX',SURF_ID='PERIODIC' /

&SURF ID='WALL',FREE_SLIP=.TRUE.,ADIABATIC=.TRUE.,DEFAULT=.TRUE./

&PART ID='drops', DIAMETER=1000., DENSITY=1000., SAMPLING_FACTOR=1, EVAPORATE=.FALSE., MONODISPERSE=.TRUE.,
      QUANTITIES(1)='PARTICLE VELOCITY',USER_DRAG_COEFFICIENT=1. /

&INIT PART_ID='drops', XB=-.5,.5,-.5,.5,0,1, NUMBER_INITIAL_PARTICLES=1000, MASS_PER_VOLUME=10./ 

&DEVC XB=-.5,.5,-.5,.5,0,10, QUANTITY='W-VELOCITY', STATISTICS='MEAN', ID='W-VEL' /
&DEVC XB=-.5,.5,-.5,.5,0,10, QUANTITY='DENSITY', STATISTICS='VOLUME INTEGRAL', ID='mass' /

&SLCF PBY=0., QUANTITY='W-VELOCITY' /

&TAIL /
