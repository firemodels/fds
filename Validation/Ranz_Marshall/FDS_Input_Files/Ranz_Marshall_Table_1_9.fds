Ranz and Marshall "Evaporation from drops - Part II" Chemical Engineering Progress, 48(4):173-180 (1952)

&HEAD CHID='Ranz_Marshall_Table_1_9' /

&MESH IJK=4,4,4, XB=0,10,0,10,0,10/

&TIME T_END = 15.,DT=0.01/
&DUMP NFRAMES=75/

&MISC NOISE=F, TMPA = 24.5, P_INF = 98391.93, HUMIDITY= 0, STRATIFICATION=F, Y_CO2_INFTY=0. /

&RADI RADIATION=F /

&SPEC ID ='WATER VAPOR' /

&PART ID='water_drops', STATIC = .TRUE., SPEC_ID = 'WATER VAPOR', DIAMETER = 954., SAMPLING_FACTOR = 1, MONODISPERSE = .TRUE.,
      MINIMUM_DIAMETER = 5, MAXIMUM_DIAMETER = 2000, INITIAL_TEMPERATURE = 7.7 /

&INIT PART_ID = 'water_drops', XB = 5,5,5,5,5,5, N_PARTICLES= 1,UVW=0,0,-0.571, ID='droplet'/

&VENT MB='XMIN',SURF_ID='OPEN'/
&VENT MB='XMAX',SURF_ID='OPEN'/
&VENT MB='YMIN',SURF_ID='OPEN'/
&VENT MB='YMAX',SURF_ID='OPEN'/
&VENT MB='ZMIN',SURF_ID='OPEN'/
&VENT MB='ZMAX',SURF_ID='OPEN'/

&DEVC XYZ=5,5,5,QUANTITY='PARTICLE TEMPERATURE', INIT_ID='droplet', ID='T'/
&DEVC XYZ=5,5,5,QUANTITY='PARTICLE DIAMETER', INIT_ID='droplet', ID='Diameter',SETPOINT=350,TRIP_DIRECTION=-1/
&DEVC XYZ=5,5,5,QUANTITY='PARTICLE DIAMETER', INIT_ID='droplet', ID='Diameter_t',NO_UPDATE_DEVC_ID='Timer'/
&DEVC XYZ=5,5,5,QUANTITY='TIME',ID='Timer',SETPOINT=10/
&DEVC XYZ=5,5,5,QUANTITY='TIME',ID='Timer2',NO_UPDATE_DEVC_ID='Timer'/
&DEVC QUANTITY='CONTROL VALUE',CTRL_ID='dD2/dt CTRL',ID='dD2/dt',UNITS='m2/s',CONVERSION_FACTOR=1E-12/

&CTRL FUNCTION_TYPE='POWER',INPUT_ID='Diameter','CONSTANT',CONSTANT=2,ID='Dt2'/
&CTRL FUNCTION_TYPE='POWER',INPUT_ID='Diameter_t','CONSTANT',CONSTANT=2,ID='Dt_t2'/
&CTRL FUNCTION_TYPE='SUBTRACT',INPUT_ID='Dt_t2','Dt2',ID='numer'/
&CTRL FUNCTION_TYPE='SUBTRACT',INPUT_ID='Timer','Timer2',ID='denom_1'/
&CTRL FUNCTION_TYPE='SUM',INPUT_ID='denom_1','CONSTANT',CONSTANT=1E-6,ID='denom'/
&CTRL FUNCTION_TYPE='DIVIDE',INPUT_ID='numer','denom',ID='dD2/dt CTRL'/
&CTRL FUNCTION_TYPE='KILL',INPUT_ID='Diameter',ID='kill'/

&TAIL /
