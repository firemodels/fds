&HEAD CHID='back_wall_test_2', TITLE='Test 1-D heat transfer through rotated GEOM obstruction' /

&MESH XB=0,1,0,1,0,1, IJK=40,40,40 /
&MESH XB=2,3,0,1,0,1, IJK=40,40,40 /
&MESH XB=4,5,0,1,0,1, IJK=40,40,40 /

&TIME T_END=20., DT=0.1 / 
&SURF ID='HOT', COLOR='RED', TMP_FRONT=1000., TAU_T=0., EMISSIVITY=1, HEAT_TRANSFER_COEFFICIENT=0 /
&SURF ID='COLD',COLOR='BLUE',TMP_FRONT=20.,   TAU_T=0., EMISSIVITY=1, HEAT_TRANSFER_COEFFICIENT=0 /

&MATL ID='MY MATERIAL', DENSITY=1000, CONDUCTIVITY=25, SPECIFIC_HEAT=0.1, EMISSIVITY=1 /
&SURF ID='WALL', MATL_ID='MY MATERIAL', THICKNESS=0.01, HEAT_TRANSFER_COEFFICIENT=0, EMISSIVITY=1, EMISSIVITY_BACK=1/

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='ZMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

&OBST XB=0.30,0.350,0.1,0.9,0.1,0.9, SURF_ID='HOT'/
&OBST XB=0.50,0.525,0.1,0.9,0.1,0.9, SURF_ID='WALL'/
&OBST XB=0.70,0.750,0.1,0.9,0.1,0.9, SURF_ID='COLD'/

&GEOM XB=2.30,2.350,0.1,0.9,0.1,0.9, SURF_ID='HOT'/
&GEOM XB=2.50,2.525,0.1,0.9,0.1,0.9, SURF_ID='WALL'/
&GEOM XB=2.70,2.750,0.1,0.9,0.1,0.9, SURF_ID='COLD'/

&GEOM XB=4.30,4.350,0.1,0.9,0.1,0.9, SURF_ID='HOT',  MOVE_ID='spin'/
&GEOM XB=4.50,4.525,0.1,0.9,0.1,0.9, SURF_ID='WALL', MOVE_ID='spin'/
&GEOM XB=4.70,4.750,0.1,0.9,0.1,0.9, SURF_ID='COLD', MOVE_ID='spin'/

&SURF ID='TARGET', MATL_ID='MY MATERIAL', THICKNESS=0.01, HEAT_TRANSFER_COEFFICIENT=0, EMISSIVITY=1, EMISSIVITY_BACK=1, EXTERNAL_FLUX=133.231, TAU_EF=0., BACKING='VOID' /
&OBST XB=0.90,0.950,0.9,0.95,0.5,0.55, SURF_ID='TARGET' /

&MOVE ID='spin', AXIS=0,0,1, X0=4.5125, Y0=0.5, Z0=0.5, ROTATION_ANGLE=45/

&BNDF QUANTITY='WALL TEMPERATURE'/
&BNDF QUANTITY='GAUGE HEAT FLUX' /

&DUMP FLUSH_FILE_BUFFERS=T, DT_DEVC=1. /

&DEVC XYZ=0.950,0.9250,0.525, QUANTITY='WALL TEMPERATURE', ID='T_F_Target', IOR=1 /
&DEVC XYZ=0.950,0.9250,0.525, QUANTITY='BACK WALL TEMPERATURE', ID='T_B_Target', IOR=1 /

&DEVC XYZ=0.500,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_F1', IOR=-1 /
&DEVC XYZ=0.525,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_B1', IOR= 1 /
 
&DEVC XYZ=2.500,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_F2' /
&DEVC XYZ=2.525,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_B2' /

&DEVC XYZ=4.500,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_F3', MOVE_ID='spin' /
&DEVC XYZ=4.525,0.50,0.50, QUANTITY='WALL TEMPERATURE', ID='T_B3', MOVE_ID='spin' /

&DEVC XYZ=0.950,0.9250,0.525, QUANTITY='INCIDENT HEAT FLUX', ID='HF_Target', IOR=1 /
&DEVC XYZ=0.500,0.50,0.50, QUANTITY='INCIDENT HEAT FLUX', ID='HF_F1', IOR=-1 /
&DEVC XYZ=2.500,0.50,0.50, QUANTITY='INCIDENT HEAT FLUX', ID='HF_F2' /
&DEVC XYZ=4.500,0.50,0.50, QUANTITY='INCIDENT HEAT FLUX', ID='HF_F3', MOVE_ID='spin' /

&SLCF PBZ=0.5, QUANTITY='INTEGRATED INTENSITY', CELL_CENTERED=T /

&TAIL /
