&HEAD CHID='divergence_test_1' /

&MESH IJK=20,20,20, XB=0,1,0,1,0,1, TRNY_ID='trny', TRNZ_ID='trnz' /

&TRNY ID='trny', CC=0.5, PC=0.3 /
&TRNZ ID='trnz', CC=0.7, PC=0.4 /

&MISC STRATIFICATION=.FALSE., Y_CO2_INFTY=0.,HUMIDITY=0./

! exercise UGLMAT with mesh stretching
&PRES SOLVER='UGLMAT'/

&TIME T_END=10. / 

&SURF ID='BLOW', COLOR='RED',  VEL=-1. /
&SURF ID='SUCK', COLOR='BLUE', VEL= 1. /

&VENT XB=0.0,0.0,0.3,0.7,0.3,0.7, SURF_ID='BLOW' / 
&VENT XB=1.0,1.0,0.3,0.7,0.3,0.7, SURF_ID='SUCK' / 

&OBST XB=0.3,0.6,0.3,0.7,0.3,0.7, COLOR='TEAL',  DEVC_ID='timer1' /
&OBST XB=0.6,0.8,0.4,0.8,0.4,0.8, COLOR='GREEN', DEVC_ID='timer2' /
&DEVC ID='timer1', XYZ=0.,0.,0., QUANTITY='TIME', SETPOINT=3., INITIAL_STATE=.TRUE. /
&DEVC ID='timer2', XYZ=0.,0.,0., QUANTITY='TIME', SETPOINT=6., INITIAL_STATE=.FALSE. /

&DEVC ID='div_max', XB=0.,1.,0.,1.,0.,1., QUANTITY='DIVERGENCE', SPATIAL_STATISTIC='MAX' /
&DEVC ID='div_min', XB=0.,1.,0.,1.,0.,1., QUANTITY='DIVERGENCE', SPATIAL_STATISTIC='MIN' /

&SLCF PBY=0.5, QUANTITY='DIVERGENCE', VECTOR=.TRUE. /

&TAIL /

