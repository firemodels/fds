&HEAD CHID='free_conv_sphere_1_8', TITLE='Free convection from a sphere, Ra=1.29' /

# 8 MESH:
&MULT ID='m1', DX=.008,DY=.008,DZ=.008, I_UPPER=1,J_UPPER=1,K_UPPER=1/
&MESH IJK=64,64,64, XB=-.008,0,-.008,0,-.008,0, MULT_ID='m1'/

&TIME T_END=1./

&DUMP DT_DEVC=0.1/

&MISC STRATIFICATION=F, NOISE=F, SIMULATION_MODE='LES', IBM_PLANE_INTERPOLATION=F /

&RADI RADIATION=F/

&VENT PBX=-.008, SURF_ID='OPEN' /
&VENT PBX= .008, SURF_ID='OPEN' /
&VENT PBY=-.008, SURF_ID='OPEN' /
&VENT PBY= .008, SURF_ID='OPEN' /
&VENT PBZ=-.008, SURF_ID='OPEN' /
&VENT PBZ= .008, SURF_ID='OPEN' /

&SPEC ID='AIR', SPECIFIC_HEAT=1., CONDUCTIVITY=0.018216, VISCOSITY=1.8216E-5, BACKGROUND=.TRUE./ ! Pr=1.00

&SURF ID='T1', COLOR='RED', TMP_FRONT=30., TAU_T=0., HEAT_TRANSFER_MODEL='RAYLEIGH'/

&BNDF QUANTITY='WALL TEMPERATURE', CELL_CENTERED=T/
&BNDF QUANTITY='CONVECTIVE HEAT FLUX', CELL_CENTERED=T/
&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='THERMAL WALL UNITS', CELL_CENTERED=T /
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T /

&SLCF PBY=0, QUANTITY='VELOCITY', VECTOR=.TRUE. /
&SLCF PBY=0, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM' /
&SLCF PBY=0, QUANTITY='DIVERGENCE', CELL_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM' /
&SLCF PBY=0, QUANTITY='DENSITY', CELL_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM' /

&DEVC XB=-.001,.001,-.001,.001,-.001,.001, QUANTITY='CONVECTIVE HEAT FLUX',
      SPATIAL_STATISTIC='SURFACE INTEGRAL', SURF_ID='T1', ID='Q'/

# Geometries:
&GEOM ID='sphere1', SURF_ID='T1', SPHERE_ORIGIN=0,0,0, SPHERE_RADIUS=0.0005, N_LEVELS=3 /

&TAIL /
