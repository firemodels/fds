&HEAD CHID='symmetry_test_2', TITLE='Test symmetry in fire simulation' /

&MESH XB=0.00,1.44,0.00,0.96,0.00,0.96, IJK=48,32,32 /

&TIME T_END=4. /

&REAC FUEL='N-HEPTANE' /

&MISC NOISE=.FALSE. /

&RADI RADIATION=.FALSE., ANGLE_INCREMENT=1, TIME_STEP_INCREMENT=1 /

&SURF ID='WALL', MATL_ID='GYPSUM', THICKNESS=0.025, COLOR='ANTIQUE WHITE', DEFAULT=.TRUE. /
&SURF ID='STEEL SHEET', MATL_ID='STEEL', THICKNESS=0.00635, COLOR='BLACK' /
&SURF ID='fire', SPEC_ID(1)='N-HEPTANE', MASS_FLUX(1)=0.0082, COLOR='ORANGE', TMP_FRONT=100. /

&OBST XB=0.54,0.90,0.30,0.66,0.00,0.001, SURF_IDS='fire','STEEL SHEET','STEEL SHEET' /
&OBST XB=0.54,0.54,0.30,0.66,0.00,0.12, SURF_ID='STEEL SHEET' /
&OBST XB=0.90,0.90,0.30,0.66,0.00,0.12, SURF_ID='STEEL SHEET' /
&OBST XB=0.54,0.90,0.30,0.30,0.00,0.12, SURF_ID='STEEL SHEET' /
&OBST XB=0.54,0.90,0.66,0.66,0.00,0.12, SURF_ID='STEEL SHEET' /

&VENT XB=0.0, 0.0, 0.24, 0.72, 0.00,0.81, SURF_ID='OPEN' / 

&MATL ID            = 'STEEL'
      SPECIFIC_HEAT = 0.77
      EMISSIVITY    = 0.8
      DENSITY       = 7800.
      CONDUCTIVITY  = 45. /

&MATL ID            = 'GYPSUM'
      SPECIFIC_HEAT = 1.
      EMISSIVITY    = 0.9
      DENSITY       = 700.
      CONDUCTIVITY  = 0.1 /

&SLCF PBX=0.72, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /
&BNDF QUANTITY='WALL TEMPERATURE', CELL_CENTERED=.TRUE. /

&DEVC ID='T_left',  XYZ=0.72,0.10,0.90, QUANTITY='TEMPERATURE' /
&DEVC ID='T_right', XYZ=0.72,0.86,0.90, QUANTITY='TEMPERATURE' /
&DEVC ID='T_s_left',  XYZ=0.72,0.10,0.96, QUANTITY='WALL TEMPERATURE', IOR=-3 /
&DEVC ID='T_s_right', XYZ=0.72,0.86,0.96, QUANTITY='WALL TEMPERATURE', IOR=-3 /

&TAIL /
