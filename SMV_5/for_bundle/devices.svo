   // ************ dynamic particle device definitions ********************
   //         (modifable using data obtained from FDS)

// data layout for particle devices
// 0->2  r,g,b color 
// 3     diameter
// 4     length
DEVICEDEF // device for particle file sphere
 SPHERE
 0.0 3.0 0.0 copynvals 0.0 0.0 1.0 setcolor
 3.0 0.0 copyval 0.1 drawsphere

DEVICEDEF // device for particle file tube
 TUBE
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 90.0 rotatey 3.0 2.0 0.0 copynvals 0.1 0.3 drawcdisk

DEVICEDEF // device for particle file tube
 CYLINDER
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 90.0 rotatey 3.0 2.0 0.0 copynvals 0.1 0.3 drawcdisk

DEVICEDEF // device for general cylinder 
 GCYLINDER
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 5.0 0.0 copyval -30.0 rotatez 6.0 0.0 copyval -10.0 rotatey 90.0 rotatey 3.0 2.0 0.0 copynvals 0.1 0.3 drawcdisk

// data layout for egg
// 0->2  r,g,b color 
// 3     dy,dz (diameter)
// 4     dx  (length)
DEVICEDEF // device for particle "egg"
 EGG
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 4.0 4.0 copyval 3.0 3.0 copyval 3.0 2.0 copyval 1.0 1.0 1.0 scalexyz 1.0 drawsphere

// data layout for gball
// 0->2  r,g,b color 
// 3     dx
// 4     dy
// 5     dz
DEVICEDEF // device for a general ball
 gball
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 3.0 4.0 copyval 4.0 3.0 copyval 5.0 2.0 copyval 1.0 1.0 1.0 scalexyz 1.0 drawsphere

// data layout for dynamic textured sphere
// 0-2 r,g,b color
// 3  initial azimuth angle
// 4  initial elevation angle
// 5  initial rotation angle
// 6  rotation rate (degrees per second)
// 7  sphere diameter
DEVICEDEF // device for dynamic textured sphere
 TSPHERE
 0.0 3.0 0.0 copynvals 1.0 0.0 0.0 setcolor
 7.0 16.0 copyval 90.0 rotatey 3.0 0.0 copyval 0.0 rotatex 4.0 0.0 copyval 0.0 rotatey 6.0 2.0 copyval 5.0 1.0 copyval 10.0 10.0 0.0 multiaddt 45.0 rotatez 0.0 0.5 drawtsphere

