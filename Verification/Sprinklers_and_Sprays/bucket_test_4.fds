&HEAD CHID='bucket_test_4', TITLE='Particle flux test case' /

&MESH IJK=20,20,20, XB=0.0,1.0,0.0,1.0,0.0,1.0 /

&TIME T_END=60. /

&MISC PARTICLE_CFL=.TRUE. /

&RADI RADIATION=.FALSE./

&SPEC ID='WATER VAPOR',MASS_FRACTION_0=0.1/
&PART ID='water drops', SPEC_ID='WATER VAPOR', DIAMETER=1000., SAMPLING_FACTOR=1 /

&SURF ID='SPRAY', PART_ID='water drops', VEL=-1.0, PARTICLE_MASS_FLUX=0.1, COLOR='BLUE', NPPC=5, DT_INSERT=0.01,TAU_PART=0 /
&OBST XB=0.10,0.15,0.45,0.55,0.90,0.95, SURF_ID6='INERT','SPRAY','INERT','INERT','INERT','INERT', DEVC_ID='clock' /
&DEVC ID='clock', XYZ=0,0,0, QUANTITY='TIME', INITIAL_STATE=.TRUE., SETPOINT=55. /

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /

&DUMP FLUSH_FILE_BUFFERS=F, DT_DEVC=1. /

&DEVC XB=0.0,1.0,0.0,1.0,0.5,0.5, ID='flux', QUANTITY='PARTICLE FLUX Z', SPATIAL_STATISTIC='AREA INTEGRAL'  /
&DEVC XB=0.0,1.0,0.0,1.0,0.0,0.0, ID='total', QUANTITY='AMPUA', PART_ID='water drops', SPATIAL_STATISTIC='SURFACE INTEGRAL'  /

&SLCF PBZ=0.5, QUANTITY='PARTICLE FLUX Z' /

&TAIL /
