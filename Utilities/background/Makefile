SOURCE_DIR = ../../../SMV/source/
INC_DIR = -I $(SOURCE_DIR)/shared -I $(SOURCE_DIR)/background
FILTERC =
FILTERF =

VPATH = $(SOURCE_DIR)/background $(SOURCE_DIR)/shared
bin = .

# Definition of the object variables

objwin = main.obj string_util.obj dmalloc.obj
obj = main.o string_util.o dmalloc.o

#*** General Purpose Rules ***

no_target:
	@echo \******** You did not specify a make target \********
	@echo Use one of targets found in the Makefile

.SUFFIXES: .F90 .c .obj .o .f90 .cpp

.c.obj:
	$(CC) -c $(CFLAGS) $(FILTERC) $(INC_DIR) $<
.c.o:
	$(CC) -c $(CFLAGS) $(FILTERC) $(INC_DIR) $<

# ********  rules for each platform supported *************

# ------------- Win 32 ----------------
#  32 bit windows

ms_win_32 : CFLAGS    = -O1 /Qvec_report0 /nologo -D WIN32 -I $(SOURCE_DIR)/shared
ms_win_32 : CC        = cl
ms_win_32 : exe       = background.exe

ms_win_32 : $(objwin)
	$(CC) -o $(bin)/$(exe) $(objwin) 

intel_win_32 : CFLAGS    = -O1 /Qvec_report0 /nologo -D WIN32 -I $(SOURCE_DIR)/shared
intel_win_32 : CC        = icl
intel_win_32 : exe       = background.exe

intel_win_32 : $(objwin)
	$(CC) -o $(bin)/$(exe) $(objwin) 

# ------------- gnu Linux 32 ----------------
#  32 bit gnu linux

gnu_linux_32 : CFLAGS    = -D pp_LINUX
gnu_linux_32 : CC        = gcc
gnu_linux_32 : exe       = background

gnu_linux_32 : $(obj)
	$(CC) -o $(bin)/$(exe) -lm $(obj) 

# ------------- Linux 32 ----------------
#  32 bit linux

intel_linux_32 : CFLAGS    = -O2 -m32 -vec_report0 -D pp_LINUX
intel_linux_32 : CC        = icc
intel_linux_32 : exe       = background

intel_linux_32 : $(obj)
	$(CC) -o $(bin)/$(exe) $(obj) 

# ------------- OSX 32 ----------------
#  32 bit osx

intel_osx_32 : CFLAGS    = -O2 -m32 -vec_report0 -D pp_OSX
intel_osx_32 : CC        = icc
intel_osx_32 : exe       = background

intel_osx_32 : $(obj)
	$(CC) -o $(bin)/$(exe) -m32 $(obj) 

# ------------- gnu OSX 32 ----------------
#  32 bit gnu osx

gnu_osx_32 : CFLAGS    = -D pp_OSX
gnu_osx_32 : CC        = gcc
gnu_osx_32 : exe       = background

gnu_osx_32 : $(obj)
	$(CC) -o $(bin)/$(exe) -lm $(obj) 

#-------------- Clean Target to remove Object and Module files -----------

.PHONY : clean
clean:
	rm *.o
