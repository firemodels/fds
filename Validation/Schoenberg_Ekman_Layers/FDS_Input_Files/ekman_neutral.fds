! Ref: Pontus von Schoenberg. Development of a Large-Eddy Simulation code for
!      atmospheric boundary layer. Swedish Defence Research Agency,
!      FOI-R--1533--SE, December, 2004.

&HEAD CHID='ekman_neutral',  TITLE='Simulation of ABL Swedish Report 2004, neutral Case' /

! &MESH IJK=40,40,40, XB=0,4000,0,2000,0,1500/

&MULT ID='m1', DX=1000,DY=500, I_UPPER=3,J_UPPER=3/ 16 mesh
&MESH IJK=10,10,40, XB=0,1000,0,500,0,1500, MULT_ID='m1'/

&TIME T_END=144000 /

&DUMP DT_SLCF=100, DT_DEVC=10, DT_DEVC_LINE=10800/

&SPEC ID='AIR', SPECIFIC_HEAT=1., BACKGROUND=T/

&MISC SIMULATION_MODE='LES', TMPA=15, P_INF=85546, HUMIDITY=0./

&PRES VELOCITY_TOLERANCE=0.01, MAX_PRESSURE_ITERATIONS=100/

&RADI RADIATION=F/

&WIND U0=10.0, LATITUDE=45, POTENTIAL_TEMPERATURE_CORRECTION=T, GEOSTROPHIC_WIND(1)=10, STRATIFICATION=F/

&SURF ID='GROUND', ROUGHNESS=3.0, COLOR='FOREST GREEN'/

&VENT PBX=0,    SURF_ID = 'PERIODIC' /
&VENT PBX=4000, SURF_ID = 'PERIODIC' /
&VENT PBY=0,    SURF_ID = 'PERIODIC' /
&VENT PBY=2000, SURF_ID = 'PERIODIC' /
&VENT PBZ=0,    SURF_ID = 'GROUND'/
&VENT PBZ=1500, SURF_ID = 'MIRROR' /

&SLCF PBX=2000,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBY=1000,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBZ= 500,QUANTITY='VELOCITY',VECTOR=.TRUE./
&SLCF PBZ=1000,QUANTITY='VELOCITY',VECTOR=.TRUE./

&SLCF PBY=1000,QUANTITY='TURBULENT PRANDTL NUMBER', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='TEMPERATURE', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='POTENTIAL TEMPERATURE', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='DENSITY', CELL_CENTERED=T/
&SLCF PBY=1000,QUANTITY='DIVERGENCE', CELL_CENTERED=T/

&DEVC XB=0,4000,0,2000, 0, 0, QUANTITY='FRICTION VELOCITY', IOR=3, ID='USTAR_AV', STATISTICS='MEAN' /

&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='DENSITY',     ID='RHO_Z'/
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='TEMPERATURE', ID='T_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='PRESSURE',    ID='P_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='U-VELOCITY', ID='U_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='V-VELOCITY', ID='V_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='W-VELOCITY', ID='W_Z', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='U-VELOCITY', ID='COV-uu', STATISTICS='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='V-VELOCITY', QUANTITY2='V-VELOCITY', ID='COV-vv', STATISTICS='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='W-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-ww', STATISTICS='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='V-VELOCITY', ID='COV-uv', STATISTICS='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='V-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-vw', STATISTICS='COV', HIDE_COORDINATES=.TRUE./
&DEVC XB=1950,1950, 975, 975,18.75,1481.25, POINTS=40, QUANTITY='U-VELOCITY', QUANTITY2='W-VELOCITY', ID='COV-uw', STATISTICS='COV', HIDE_COORDINATES=.TRUE./

&TAIL/