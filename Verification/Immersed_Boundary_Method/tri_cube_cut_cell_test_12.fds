&HEAD CHID='tri_cube_cut_cell_test_12', TITLE='test of cut cell area calculation' /

&MESH IJK=3,3,3, XB=-1,2,-1,2,-1,2 /
  
&TIME T_END=1 /

&DUMP CUTCELL_DATA_FILE=.TRUE. /

&SURF ID='face', COLOR='GRAY' /

! Facets with vertices, N(3), ordered so that with right-hand rule
! the surface normal points toward the gas phase (out of the solid).

! The following are 12 examples to test the cut-cell algorithm

! example 12

&GEOM VERTS=1.25,-0.25,0.5, -0.25,0.5,1.25, 0.5,1.25,-0.25,
      FACES=1,2,3,
      SURF_ID='face' /

&TAIL /
