&HEAD CHID='sphere_propane_demo', TITLE='Complex Geometry: Test propane burning around sphere.' /

# 1 MESH:
#& MESH IJK=64,64,96, XB=-2.0,2.0,-2.0,2.0,0.0,6.0 /

# 2 MESHES:
#& MESH IJK=64,64,48, XB=-2.0,2.0,-2.0,2.0,0.0,3.0, MULT_ID='mesh' /
#& MULT ID='mesh', DZ=3, K_UPPER=1 /

# 6 MESHES:
&MESH IJK=32,16,16, XB=-2.0,2.0,-2.0,0.0,0.0,2.0, MULT_ID='mesh' /
&MULT ID='mesh', DY=2, DZ=2, J_UPPER=1, K_UPPER=2 /

&TIME T_END=5.0 /
&MISC STRATIFICATION=.FALSE., DO_IMPLICIT_CCREGION=.TRUE. / 
&PRES SOLVER='UGLMAT' /
&RADI RADIATION=.FALSE. /

# Vents:
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

# Species:
&REAC FUEL='PROPANE', SOOT_YIELD=0.02 /

&SURF ID='BURNER', HRRPUA=3200., COLOR='RED' /
&SURF ID='SPHERE', COLOR='GREEN', MATL_ID='SPHERE', THICKNESS=0.1 /
&MATL ID='SPHERE', DENSITY=100, CONDUCTIVITY=1, SPECIFIC_HEAT=1 /

# Export Parameters:
# ------ ----------
# Export to SMV Slice Menu Item : Cartesian Grid slices:
# ------ -- --- ----- ---- ----   --------- ---- ------
&SLCF PBY=0, QUANTITY='VELOCITY',      VECTOR=.TRUE.        /
&SLCF PBY=0, QUANTITY='TEMPERATURE',   CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='DIVERGENCE',    CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='H',             CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='F_X'                                 /
&SLCF PBY=0, QUANTITY='DENSITY',       CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='DIFFUSIVITY',   CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='VISCOSITY',     CELL_CENTERED=.TRUE. /
&SLCF PBY=0, QUANTITY='MASS FRACTION', CELL_CENTERED=.TRUE.,
                                       SPEC_ID='PROPANE'    /
&SLCF PBY=0, QUANTITY='HRRPUV',        CELL_CENTERED=.TRUE. /


# Current export SMV to Boundary Menu Item :
# ------- ------ --- -- -------- ---- ----

# Cartesian plane INCLUDE_GEOM slices (boundary triangle format):
&SLCF PBY=0, QUANTITY='MASS FRACTION', FACE_CENTERED=.TRUE.,
                                       SPEC_ID='PROPANE',    SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=0, QUANTITY='DIVERGENCE',    FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=0, QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /
&SLCF PBY=0, QUANTITY='HRRPUV',        FACE_CENTERED=.TRUE., SLICETYPE='INCLUDE_GEOM'    /

# Boundary colormap in &GEOM surface:
&BNDF QUANTITY='WALL TEMPERATURE' /

# 3D Boundary slices in cut-cell and EXIM region boundary:
&SLCF QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='EXIMBND_FACES'    /
&SLCF QUANTITY='TEMPERATURE',   FACE_CENTERED=.TRUE., SLICETYPE='CUT_CELLS'    /


&DEVC ID='WALL-T1', XYZ=0,0,1, IOR=0, QUANTITY='WALL TEMPERATURE' /
&DEVC ID='WALL-T2', XYZ=1,0,2, IOR=0, QUANTITY='WALL TEMPERATURE' /
&DEVC ID='WALL-T3', XYZ=0,0,3, IOR=0, QUANTITY='WALL TEMPERATURE' /

# Geometries:
&OBST XB=-.5,.5,-.5,.5,0.2,.4, SURF_IDS='BURNER','INERT','INERT' /
&CATF OTHER_FILES='./sphere_geom.dat' /

&TAIL /
