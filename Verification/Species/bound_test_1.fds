&HEAD CHID='bound_test_1', TITLE='Test of species boundedness correction in fire'/

&MESH IJK=4,1,4, XB=0,1,0,1,0,1/

&TIME T_END=1,DT=0.1/

&DUMP DT_DEVC=0.1/

&MISC NOISE=.FALSE.,FREEZE_VELOCITY=.TRUE./

&COMB INITIAL_UNMIXED_FRACTION=0,SUPPRESSION=.FALSE. /

&SPEC ID='A1',BACKGROUND=.TRUE.,ENTHALPY_OF_FORMATION=0/
&SPEC ID='A2',ENTHALPY_OF_FORMATION=0/
&SPEC ID='F1',ENTHALPY_OF_FORMATION=0/
&SPEC ID='F2',ENTHALPY_OF_FORMATION=0/
&SPEC ID='P1',ENTHALPY_OF_FORMATION=0/
&SPEC ID='P2',ENTHALPY_OF_FORMATION=0/

&INIT XB=0,1,0,1,0,1
      SPEC_ID(1)='F1',MASS_FRACTION(1)=0.3,
      SPEC_ID(2)='F2',MASS_FRACTION(2)=0.1,
      SPEC_ID(3)='A2',MASS_FRACTION(3)=0.4/

! two independent reactions

&REAC ID='R1'
      FUEL='F1'
      SPEC_ID_NU='F1','A1','P1'
      NU=-1,-1,2/

&REAC ID='R2'
      FUEL='F2'
      SPEC_ID_NU='F2','A2','P2'
      NU=-1,-1,2/

&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='F1', SPATIAL_STATISTIC='MEAN', ID='XF1'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='F2', SPATIAL_STATISTIC='MEAN', ID='XF2'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='A1', SPATIAL_STATISTIC='MEAN', ID='XA1'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='A2', SPATIAL_STATISTIC='MEAN', ID='XA2'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='P1', SPATIAL_STATISTIC='MEAN', ID='XP1'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='VOLUME FRACTION', SPEC_ID='P2', SPATIAL_STATISTIC='MEAN', ID='XP2'/
&DEVC XB=0,1,0,1,0,1, QUANTITY='SUM LUMPED MASS FRACTIONS', SPATIAL_STATISTIC='MEAN', ID='SUM'/

&TAIL/
